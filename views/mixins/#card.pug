//- Initiate a card with all its arguments
mixin card($icon, $alticon, $title, $info, $singlePlayerLink, $numberOfPlayers, $multiplayerAvailable=false, $multiplayerLink="#")
  // game card start
  .col-xs-12.col-sm-6.col-md-4.mb-3
    .card.h-100(id='game-card')
      img.card-img-top(src=$icon alt=$alticon width="100%" height="180" data-toggle="modal" data-target="#detailsModal")
      .card-body
        h5.card-title=$title
        p.card-text=$info
        p.card-text
          small.text-muted Max no. of Players: 
          small.text-muted=$numberOfPlayers
        center
          .btn-group-vertical
            a.btn.btn-primary(href=$singlePlayerLink) Single Player
            a.btn.btn-primary(hidden=!$multiplayerAvailable, href=$multiplayerLink) Multiplayer
  // game card end